<p id="notice">
  <%= notice %>
</p>

<h1>Coins</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Descrição</th>
      <th scope="col">Acronimo</th>
      <th scope="col">Imagem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>

        <td><%= image_tag(coin.url_image, size:"50x50", alt:"teste") %></td>

        <td class="">
          <button type="button" class="btn btn-info btn-commands"><%= link_to 'Show' , coin %></button>
        </td>
        <td>
          <button type="button" class="btn btn-warning btn-commands"><%= link_to 'Edit' , edit_coin_path(coin) %></button>
        </td>
        <td>
          <button type="button" class="btn btn-danger btn-commands">
            <%= link_to 'Destroy' , coin, method: :delete, data: { confirm: 'Are you sure?' } %>
          </button>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-success btn-add">
  <%= link_to 'New Coin' , new_coin_path %>
</button>